<% prefix = form.object.new_record? ? "" : "Reset password and " %>
<% if !form.object.new_record? %>
  <%= form.radio_button(:reset_password_method, "dont") %> Leave password alone<br/>
<% end %>
<%= form.radio_button(:reset_password_method, "email") %> <%= (prefix + "send email instructions").capitalize %><br/>
<%= form.radio_button(:reset_password_method, "print") %> <%= (prefix + "show printable instructions").capitalize %><br/>
