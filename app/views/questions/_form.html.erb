<% content_for(:per_page_js){javascript_include_tag("questionings")} %>

<%= flash_and_form_errors(question) %>
<%= form_for(@question) do |f| %>
  <% f.mode = controller.action_name.to_sym %>
  <%= render("subform", :f => f, :question => question) %>
  <%= f.mode == "show" ? '' : f.submit((question.new_record? ? "Create" : "Update") + " Question") %>
<% end %>